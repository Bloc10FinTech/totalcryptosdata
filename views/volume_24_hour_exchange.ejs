<div id="wrapper">
	
	<div class="animated fadeInRight">
		
		<div class="col-lg-10 col-lg-offset-1 Vol24Hex">
			<%data.forEach(function(exchange){%>
			
				<div class="table-responsive">
					<h1><a href="/exchange/<%=exchange.name%>"><%=exchange.displayName%></a></h1>
					<table class="table table-striped table-bordered table-hover 24_hour_exchange">
					<thead>
					<tr>
						<th>#</th>
						<th>Currency</th>
						<th>Volume (24h)</th>
						<th>Price</th>
						<th>Pair</th>
					</tr>
					</thead>
					<tbody>
					<%exchange.data.forEach(function(volume,index){%>
					<tr>
						<td><%=index+1%></td>
						<td><%=volume.currency%></td>
						<td><%=Math.round(parseFloat(volume.volume))%></td>
						<td><%=parseFloat(volume.price).toFixed(5)%></td>
						<td>
						<a href="volume-24-hour-market/<%=volume.pair%>">
						<%=volume.pair%>
						</a>
						</td>
					</tr>
					<%});%>
					</tbody>
					</table>
				</div>	
			<%});%>
			
		</div>
			
	</div>
	
</div>
