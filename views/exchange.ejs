<div id="wrapper">
	
	<div class="animated fadeInRight">
		<div class="row">
			<div class="col-lg-10 col-lg-offset-1"><h2><strong><%=data.name%></strong></h2></div>
			<div class="col-lg-10 col-lg-offset-1"><h4><a href="<%=data.url%>"><%=data.url%></a></h4></div>
			<div class="col-lg-10 col-lg-offset-1"></div>
			<div class="col-lg-10 col-lg-offset-1">
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover exchange" >
					<thead>
					<tr>
						<th>#</th>
						<th>Currency</th>
						<th>Pair</th>
						<th>Volume (24h)</th>
						<th>Price</th>
						<th>Volume (%)</th>
					</tr>
					</thead>
					<tbody>
					<%data.data.forEach(function(summary,index){%>
					<tr>
						<td><%=index+1%></td>
						<td>
						<%if((summary.currency!=undefined) && (summary.currency.match(/^[0-9a-zA-Z]+$/))){%>
						<a href="/volume-24-hour-currency/<%=summary.currency%>">
						<%=summary.currency%>
						</a>
						<%}else{%>
						<%=summary.currency%>
						<%}%>
						</td>
						<td>
						<a href="/volume-24-hour-market/<%=summary.pair.replace(/\W/g, '').replace('_', '')%>">
						<%=summary.pair%>
						</a>
						</td>
						<td><%=summary.volume%></td>
						<td><%=summary.price%></td>
						<td><%=summary.variation%></td>
					</tr>
					<%});%>
					</tbody>
					</table>
				</div>	
			</div>
		</div>
	</div>
	
</div>
