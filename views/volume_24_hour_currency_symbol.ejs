<div id="wrapper">
	
	<div class="animated fadeInRight">
		<div class="col-lg-10 col-lg-offset-1">
			<%data.forEach(function(coins){%>
			
				<div class="table-responsive">
					<h1><%=coins.currency%></h1>
					<table class="table table-striped table-bordered table-hover 24_hour_currency">
					<thead>
					<tr>
						<th>#</th>
						<th>Volume (24h)</th>
						<th>Currency</th>
						<th>Price</th>
						<th>Source</th>
					</tr>
					</thead>
					<tbody>
					<%coins.data.forEach(function(volume,index){%>
					<tr>
						<td><%=index+1%></td>
						<td><%=Math.round(volume.volume)%></td>
						<td><%=volume.currency%></td>
						<td><%=parseFloat(volume.price).toFixed(5)%></td>
						<td><a href="/exchange/<%=volume.src.toLowerCase()%>"><%=volume.src%></a></td>
					</tr>
					<%});%>
					</tbody>
					</table>
				</div>	
			<%});%>
			
		</div>
			
	</div>
	
</div>
