<script>
$(document).ready(function(){
	$.ajax({
		type:'GET',
		url:'/exchanges_currencies',
		success:function(data){ 
			var options='';
			if(data.currencies){
				data.currencies.forEach(function(currency_name){
					options+='<option value="'+currency_name+'"';
					if(currency_name=='btc'){
						options+=' selected="selected" ';
					}
					options+='>';
					options+=currency_name.toUpperCase();
					options+='</option>';
				});
			}
			$('#currency').html(options);
			create_script();
		}
	});
	
	$("#currency,#show_volume,#show_ask_bid").change(function(){
		create_script();
	});
});

function create_script(){
	var currency_name=$("#currency").val();
	var is_volume=$("#show_volume").prop('checked');
	var is_show_ask_bid=$("#show_ask_bid").prop('checked');
	$('#script').html('&lt;script src="https://totalcryptos.com/js/currency_widget.js"&gt;&lt;/script&gt;<div totalcryptos-currency="'+currency_name+'" totalcryptos-volume="'+is_volume+'" totalcryptos-ask_bid="'+is_show_ask_bid+'"></div>');
}
</script>

